#filters
  %filter{ ng-repeat: 'filter in filters', filter: 'filter' }

.row
  .col-sm-11.col-xs-10
    %select.form-control{ ng-model: 'filterToAdd', ng-options: 'kind as instance.filterName for (kind , instance) in availableFilters' }
      %option{value: '', selected: 'selected', disabled: 'disabled' } Filter by...
  .col-sm-1.col-xs-2.text-right
    %button.btn.btn-default{ ng-click: 'removeAllFilters()' }
      %span.glyphicon.glyphicon-remove
%hr

%table#solar-systems.table.table-condensed.table-hover{ ng-class: "{ 'loading': loading}" }
  %thead
    %tr
      %th.orderable{ ng-repeat: "(field, details) in fields track by field", ng-click: 'orderBy(field, details.sorted)' }
        {{ details.text }}
        %span.glyphicon{ ng-class: "{'glyphicon-sort': !details.sorted, 'glyphicon-sort-by-attributes': details.sorted == 'asc', 'glyphicon-sort-by-attributes-alt': details.sorted == 'desc'}"}
  %tbody
    %tr{ ng-repeat: "solarSystem in solarSystems track by $index" }
      %td{ ng-repeat: "(field, details) in fields track by field" }
        {{ details.display(solarSystem)  }}
